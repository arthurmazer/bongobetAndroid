<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_img_carousel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:cardBackgroundColor="@android:color/darker_gray"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_img_carousel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/league_of_legends_logo"
                android:scaleType="centerCrop" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_game_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="64sp"
                android:elevation="16dp"
                android:fontFamily="@font/roboto_bold"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="48dp"
                android:layout_marginHorizontal="16dp"
                android:textColor="@color/white"
                tools:text="League of Legends"/>

            <Button
                android:id="@+id/btn_go_bet"
                android:text="@string/btn_go_bet_text"
                android:layout_gravity="bottom"
                android:elevation="8dp"
                android:backgroundTint="@color/transparent_grey"
                android:layout_marginHorizontal="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </androidx.cardview.widget.CardView>


    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
